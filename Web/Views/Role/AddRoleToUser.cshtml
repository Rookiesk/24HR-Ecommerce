@model Web.Models.RoleViewModels.ShowRolesAndUsersViewModels
@{
    ViewBag.Title = "Add role to user";
}

<h2>AddRoleToUser</h2>
@using (Html.BeginForm("AddRoleToUser", "Role", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.DropDownList("RoleName", new SelectList(Model.Roles, "Name", "Name"), "Roles")
    @Html.DropDownList("Username", new SelectList(Model.Users, "Username", "Username"), "Users")
    <br/>
    <br/>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Add role to user" />
        </div>
    </div>
}