@model Model.Entity.Payment
@{
    ViewBag.Title = "Upload slip";
}

<h2>Upload slip</h2>


@using (Html.BeginForm("UplodPaymentSlip", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form",enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label for="upload" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="file" id="upload" name="upload"/>
        </div>
    </div>
    <input type="hidden" name="id" value=@Model.Id />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Upload" />
        </div>
    </div>
}

